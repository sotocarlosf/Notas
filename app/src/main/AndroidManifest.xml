<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.carlosarturosotofonseca.notas1">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.permission.camera"></uses-feature>
    <uses-feature android:name="android.hardware.camera.autofocus"></uses-feature>

    <uses-feature android:name="android.hardware.camera" android:required="false" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainMenu"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".AddNote"></activity>
        <activity android:name=".ListNotes"></activity>
        <activity android:name=".DisplayNote"></activity>
        <activity android:name=".CameraActivity"></activity>

    </application>

</manifest>
